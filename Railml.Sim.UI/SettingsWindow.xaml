<Window x:Class="Railml.Sim.UI.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="Simulation Settings" Height="350" Width="400" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="Mean Inter-Arrival Time (s):"/>
        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding MeanInterArrivalTime}" Margin="2"/>

        <Label Grid.Row="1" Grid.Column="0" Content="Train Length (m):"/>
        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding TrainLength}" Margin="2"/>

        <Label Grid.Row="2" Grid.Column="0" Content="Default Speed (m/s):"/>
        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding DefaultSpeed}" Margin="2"/>

        <Label Grid.Row="3" Grid.Column="0" Content="Braking Deceleration (m/s^2):"/>
        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding BrakingDeceleration}" Margin="2"/>

        <Label Grid.Row="4" Grid.Column="0" Content="Signal Recognition Dist (m):"/>
        <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding SignalRecognitionDistance}" Margin="2"/>

        <Label Grid.Row="5" Grid.Column="0" Content="Movement Update Interval (s):"/>
        <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding MovementUpdateInterval}" Margin="2"/>

        <Label Grid.Row="6" Grid.Column="0" Content="Train Spawn (Up):"/>
        <CheckBox Grid.Row="6" Grid.Column="1" IsChecked="{Binding TrainSpawnUp}" VerticalAlignment="Center" Margin="2"/>

        <Label Grid.Row="7" Grid.Column="0" Content="Train Spawn (Down):"/>
        <CheckBox Grid.Row="7" Grid.Column="1" IsChecked="{Binding TrainSpawnDown}" VerticalAlignment="Center" Margin="2"/>

        <Label Grid.Row="8" Grid.Column="0" Content="Track Response Time (s):"/>
        <TextBox Grid.Row="8" Grid.Column="1" Text="{Binding TrackResponseTime}" Margin="2"/>

        <StackPanel Grid.Row="10" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" IsDefault="True" Click="OnOkClick" Width="80" Margin="5"/>
            <Button Content="Cancel" IsCancel="True" Width="80" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>

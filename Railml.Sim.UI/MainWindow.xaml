<Window x:Class="Railml.Sim.UI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:skia="clr-namespace:SkiaSharp.Views.WPF;assembly=SkiaSharp.Views.WPF"
    xmlns:local="clr-namespace:Railml.Sim.UI"
    xmlns:views="clr-namespace:Railml.Sim.UI.Views"
    xmlns:conv="clr-namespace:Railml.Sim.UI.Converters" mc:Ignorable="d" Title="RailML DES Simulator" Height="800" Width="1200" Icon="Resources/simulator.png">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <conv:StatusColorConverter x:Key="StatusColorConverter"/>
        <conv:SignalColorConverter x:Key="SignalColorConverter"/>

    </Window.Resources>

    <Window.CommandBindings>
        <CommandBinding Command="ApplicationCommands.Copy" Executed="OnCopyLog"/>
    </Window.CommandBindings>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <!-- Splitter -->
                <RowDefinition Height="150" x:Name="LogRow"/>
                <!-- Log -->
                <RowDefinition Height="Auto"/>
                <!-- Status -->
            </Grid.RowDefinitions>

            <ToolBar Grid.Row="0">
                <Button Content="Load RailML" Click="OnLoadClick"/>
                <Separator/>
                <ToggleButton Command="{Binding ToggleSimulationCommand}" IsChecked="{Binding IsSimulationRunning, Mode=OneWay}">
                    <ToggleButton.Style>
                        <Style TargetType="ToggleButton">
                            <Setter Property="Content" Value="Start"/>
                            <Style.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter Property="Content" Value="Stop"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ToggleButton.Style>
                </ToggleButton>
                <Separator/>
                <ToggleButton Content="Log" IsChecked="{Binding IsLogVisible}"/>
                <Separator/>
                <Button Content="Settings" Click="OnSettingsClick"/>
                <Separator/>
                <TextBlock Text="Speed:" VerticalAlignment="Center" Margin="5,0"/>
                <Slider Width="100" Minimum="0.5" Maximum="50.0" Value="{Binding TimeScale}" TickFrequency="0.5" IsSnapToTickEnabled="False" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding TimeScale, StringFormat='{}{0:F1}x'}" VerticalAlignment="Center" Width="30" Margin="5,0"/>
            </ToolBar>

            <skia:SKElement Name="SkiaCanvas" Grid.Row="1" PaintSurface="OnPaintSurface" MouseWheel="OnMouseWheel" MouseDown="OnMouseDown" MouseMove="OnMouseMove" MouseUp="OnMouseUp"/>

            <!-- Splitter -->
            <GridSplitter Grid.Row="2" Height="5" HorizontalAlignment="Stretch" VerticalAlignment="Center" Visibility="{Binding IsLogVisible, Converter={StaticResource BoolToVis}}"/>

            <!-- Log Window -->
            <Border Grid.Row="3" Visibility="{Binding IsLogVisible, Converter={StaticResource BoolToVis}}" BorderBrush="Gray" BorderThickness="0,1,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal" Background="#F0F0F0">
                        <TextBlock Text="Simulation Log" FontWeight="Bold" Margin="5" VerticalAlignment="Center"/>
                        <Separator Width="10" Visibility="Hidden"/>
                        <Separator Width="10" Visibility="Hidden"/>
                        <ToggleButton Name="FilterToggle" Content="Filter" Padding="4,1" Margin="2"/>
                        <Popup IsOpen="{Binding ElementName=FilterToggle, Path=IsChecked}" StaysOpen="False" PlacementTarget="{Binding ElementName=FilterToggle}" Placement="Bottom">
                            <Border Background="White" BorderBrush="Gray" BorderThickness="1" Padding="5" MaxHeight="300">
                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                    <ItemsControl ItemsSource="{Binding MessageFilters}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <CheckBox Content="{Binding Name}" IsChecked="{Binding IsChecked}" Margin="2"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </Border>
                        </Popup>
                        <Button Content="Save" Click="OnSaveLogClick" Padding="4,1" Margin="2"/>
                        <Button Content="Clear" Click="OnClearLogClick" Padding="4,1" Margin="2"/>
                    </StackPanel>
                    <ListView x:Name="LogListView" Grid.Row="1" ItemsSource="{Binding LogView}" SelectionMode="Extended" VirtualizingPanel.IsVirtualizing="True">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Time" DisplayMemberBinding="{Binding Time}" Width="100"/>
                                <GridViewColumn Header="Type" DisplayMemberBinding="{Binding Type}" Width="80"/>
                                <GridViewColumn Header="Message" DisplayMemberBinding="{Binding Message}" Width="250"/>
                                <GridViewColumn Header="Information" DisplayMemberBinding="{Binding Information}" Width="400"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </Border>

            <StatusBar Grid.Row="4">
                <TextBlock Name="StatusText" Text="Ready"/>
                <Separator/>
                <TextBlock Text="{Binding CurrentTime, StringFormat='Time: {0:F2} s'}"/>
                <Separator/>
                <TextBlock Text="{Binding PendingEventCount, StringFormat='Events: {0}'}"/>
            </StatusBar>
        </Grid>

        <!-- Right Splitter -->
        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center" VerticalAlignment="Stretch"/>

        <!-- Right Panel: Explorer & Properties -->
        <Grid Grid.Column="2" Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Explorer -->
            <views:ExplorerView DataContext="{Binding Explorer}" Grid.Row="0"/>

            <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>

            <!-- Properties -->
            <views:PropertiesView DataContext="{Binding Explorer}" Grid.Row="2"/>
        </Grid>
    </Grid>
</Window>

<Window x:Class="Railml.Sim.UI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:skia="clr-namespace:SkiaSharp.Views.WPF;assembly=SkiaSharp.Views.WPF"
    xmlns:local="clr-namespace:Railml.Sim.UI" mc:Ignorable="d" Title="RailML DES Simulator" Height="800" Width="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ToolBar Grid.Row="0">
            <Button Content="Load RailML" Click="OnLoadClick"/>
            <Separator/>
            <Button Content="Start" Click="OnStartClick"/>
            <Button Content="Stop" Click="OnStopClick"/>
            <Separator/>
            <Button Content="Settings" Click="OnSettingsClick"/>
        </ToolBar>

        <skia:SKElement Name="SkiaCanvas" Grid.Row="1" PaintSurface="OnPaintSurface"/>

        <StatusBar Grid.Row="2">
            <TextBlock Name="StatusText" Text="Ready"/>
            <Separator/>
            <TextBlock Text="{Binding CurrentTime, StringFormat='Time: {0:F2} s'}"/>
        </StatusBar>
    </Grid>
</Window>
